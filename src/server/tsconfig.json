{
   "include": ["**/*.ts"],
   "compilerOptions": {
    "rootDirs": ["src"],
     "outDir": "dist",
     "lib": ["ES2020", "dom"],
     "isolatedModules": true,
     "esModuleInterop": true,
     "moduleResolution": "Node",
     "resolveJsonModule": true,
     "target": "ES2020",
     "module": "ESNext",
     "types": ["node"],
     "strict": true,
     "allowJs": true,
     "useUnknownInCatchVariables": false,
     "noImplicitReturns": true,
     "forceConsistentCasingInFileNames": true,
     "baseUrl": ".",
   },
   "exclude":[ 
      "node_modules"
   ],
   "compileOnSave":false
 }
