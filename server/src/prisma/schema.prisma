// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id             Int      @id @default(autoincrement())
  email          String   @unique @db.VarChar(255)
  email_verified Boolean  @default(false)
  created_at     String   @db.VarChar(255)
  profile        Profile?
  deactivated    Boolean  @default(false)
  deactivated_at String   @default("") @db.VarChar(255)
  phone_number   String   @default("") @db.VarChar(255)
}

model Profile {
  id                                    Int                  @id @unique @default(autoincrement())
  name                                  String               @default("") @db.VarChar(255)
  profile_img                           String               @default("") @db.VarChar(255)
  updated_at                            String               @default("") @db.VarChar(255)
  account                               Account              @relation(fields: [account_Id], references: [id])
  account_Id                            Int                  @unique
  accepted_outings                      Outing[]             @relation(name: "Accepted_Profiles")
  pending_outings                       Outing[]             @relation(name: "Pending_Profiles")
  declined_outings                      Outing[]             @relation(name: "Declined_Profiles")
  social_pin                            String               @unique @default("") @db.VarChar(255)
  friend_requestor_relation             Friendship[]         @relation("Friend_Requestor")
  friend_addressee_relation             Friendship[]         @relation("Friend_Addressee")
  friend_modifier_status_relation       FriendshipStatus[]   @relation("Friend_Status_Modifier")
  notification_modifier_status_relation NotificationStatus[] @relation("Notification_Status_Modifier")
  notification_sender_relation          Notification[]       @relation("Notification_Sender")
  notification_recipient_relation       Notification[]       @relation("Notification_Recipient")
}

model Friendship {
  requestor_profile_id       Int
  requestor_relation         Profile            @relation("Friend_Requestor", fields: [requestor_profile_id], references: [id])
  addressee_profile_id       Int
  addressee_relation         Profile            @relation("Friend_Addressee", fields: [addressee_profile_id], references: [id])
  created_at                 String             @db.VarChar(255)
  friendship_status_relation FriendshipStatus[] @relation("FriendshipStatus_Friendship")

  @@id([requestor_profile_id, addressee_profile_id])
  @@unique([requestor_profile_id, addressee_profile_id]) // this means that there can't be two rows where the requestor_profile_id and addressee_profile_id are BOTH the same (i.e. a friendship can't be duplicated)
}

model FriendshipStatusStates {
  status_code                String             @id @db.VarChar(1)
  status_name                String             @db.VarChar(20)
  friendship_status_relation FriendshipStatus[]
}

model FriendshipStatus {
  status_code          String                 @db.VarChar(1)
  status               FriendshipStatusStates @relation(fields: [status_code], references: [status_code])
  created_at           DateTime
  requestor_profile_id Int
  addressee_profile_id Int
  friendship_relation  Friendship             @relation("FriendshipStatus_Friendship", fields: [requestor_profile_id, addressee_profile_id], references: [requestor_profile_id, addressee_profile_id])
  modifier_profile_id  Int
  modifier             Profile                @relation("Friend_Status_Modifier", fields: [modifier_profile_id], references: [id])

  @@unique([requestor_profile_id, addressee_profile_id, created_at]) // this means that there can't be two rows with the same ids and created_at (i.e. a friendship status can't be duplicated)
}

model NotificationTypes {
  // fr (friend request, will require action) oi(outing information, will not require action)
  notification_type_code       String         @id @db.VarChar(2)
  notification_type_name       String         @db.VarChar(20)
  notification_status_relation Notification[]
}

model NotificationStatusStates {
  // s(sent) o(opened) a(accepted) d(declined) x(deleted)
  status_code                  String               @id @db.VarChar(2)
  status_name                  String               @db.VarChar(20)
  notification_status_relation NotificationStatus[]
}

model NotificationStatus {
  status_code           String                   @id @db.VarChar(2)
  status_relation       NotificationStatusStates @relation(fields: [status_code], references: [status_code])
  notification_relation Notification[]
  created_at            DateTime
  sender_profile_id     Int
  recipient_profile_id  Int
  modifier_profile_id   Int
  modifier_relation     Profile                  @relation("Notification_Status_Modifier", fields: [modifier_profile_id], references: [id])

  @@unique([sender_profile_id, recipient_profile_id, created_at, status_code]) // this will ensure that there can't be a duplicate record when for example, someone opens a notification
}

model Notification {
  sender_profile_id        Int
  sender_relation          Profile            @relation("Notification_Sender", fields: [sender_profile_id], references: [id])
  recipient_profile_id     Int
  recipient_relation       Profile            @relation("Notification_Recipient", fields: [recipient_profile_id], references: [id])
  created_at               String
  notification_type_code   String             @db.VarChar(2)
  notification_type        NotificationTypes  @relation(fields: [notification_type_code], references: [notification_type_code])
  notification_status_code String             @db.VarChar(2)
  notification_status      NotificationStatus @relation(fields: [notification_status_code], references: [status_code])
  requires_action          Boolean            @default(false)
  action_taken             Boolean            @default(false)

  @@id([sender_profile_id, recipient_profile_id])
  @@unique([sender_profile_id, recipient_profile_id, created_at, notification_type_code]) // this means that there can't be two rows with the same ids, where the notification type is the same and it was created at the same time; there can be two friend requests sent to the same person by the same sender, however they would need to be at different times
}

model Outing {
  id                  Int       @id @default(autoincrement())
  name                String    @db.VarChar(255)
  accepted_profiles   Profile[] @relation(name: "Accepted_Profiles")
  pending_profiles    Profile[] @relation(name: "Pending_Profiles")
  declined_profiles   Profile[] @relation(name: "Declined_Profiles")
  creator_profile_id  Int
  created_at          String    @db.VarChar(255)
  start_date_and_time String    @db.VarChar(255)
  place_ids           String[]
}

model LocationDetails {
  id                     Int      @id @default(autoincrement())
  business_status        String?  @default("") @db.VarChar(255)
  formatted_address      String?  @default("") @db.VarChar(255)
  city                   String?  @default("") @db.VarChar(255)
  state                  String?  @default("") @db.VarChar(255)
  lat                    Decimal?
  lng                    Decimal?
  plus_compound_code     String?  @default("") @db.VarChar(255)
  plus_global_code       String?  @default("") @db.VarChar(255)
  vicinity               String?  @default("") @db.VarChar(255)
  icon                   String?  @default("") @db.VarChar(255)
  icon_mask_base_uri     String?  @default("") @db.VarChar(255)
  icon_background_color  String?  @default("") @db.VarChar(255)
  name                   String?  @default("") @db.VarChar(255)
  place_id               String?  @unique @default("") @db.VarChar(255)
  types                  String[]
  rating                 Decimal?
  user_ratings_total     Int?
  formatted_phone_number String?  @default("") @db.VarChar(255)
  open_periods           String[]
  weekday_text           String[]
  utc_offset_minutes     Int?
  photos_references      String[]
  reviews                String[]
  price_level            Int?
  url                    String?  @default("") @db.VarChar(255)
  website                String?  @default("") @db.VarChar(255)
  html_attributions      String?
  expiration_date        String   @default("") @db.VarChar(255)
}
